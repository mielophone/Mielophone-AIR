<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx" 
		 width="400" height="300">
	
	<fx:Script source="../../../logic/ArtistInfoView.as" />
	
	<!-- background fill -->
	<s:Rect left="0" right="0" top="0" bottom="0" >
		<s:fill>
			<s:LinearGradient rotation="90">
				<s:GradientEntry color="#DDDDDD" />
				<s:GradientEntry color="#FFFFFF" />
			</s:LinearGradient>
		</s:fill>
	</s:Rect>
	
	<!-- image and description -->
	<s:HGroup width="100%" height="100" verticalAlign="top">
		<s:Image width="150" height="100" verticalAlign="top" id="artistImage" 
				 smooth="true" smoothingQuality="high"/>
		<s:VGroup width="100%" height="100%" variableRowHeight="true">
			<s:Label width="100%" id="artistName" paddingTop="10" paddingLeft="5" paddingRight="5" 
					 fontSize="16" fontWeight="bold"/>
			<s:Scroller width="100%" height="100%" skinClass="com.codezen.skins.scroll.SmallScroll">
				<s:Group>
					<s:Label width="100%" id="artistDesc" paddingLeft="5" paddingRight="5" />
				</s:Group>
			</s:Scroller>
		</s:VGroup>
	</s:HGroup>
	
	<!-- separator line -->
	<s:Line width="100%" top="102">
		<s:stroke>
			<s:SolidColorStroke color="#000000" alpha="0.4" />
		</s:stroke>
	</s:Line>
	
	<s:Scroller width="100%" bottom="0" top="105" horizontalScrollPolicy="off" skinClass="com.codezen.skins.scroll.SmallScroll">		
		<s:DataGroup id="albumsList" itemRenderer="mielophone.ui.itemrenderers.AlbumItem">
			<s:layout>
				<s:TileLayout paddingTop="5" paddingLeft="2" paddingRight="2" columnWidth="130" rowHeight="200" columnAlign="justifyUsingGap"/>
			</s:layout>
		</s:DataGroup>
	</s:Scroller>
	
</s:Group>
